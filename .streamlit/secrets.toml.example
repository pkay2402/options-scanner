# =============================================================================
# Streamlit Secrets Configuration Example
# =============================================================================
# 
# Copy this file to secrets.toml and fill in your actual API keys.
# IMPORTANT: Never commit secrets.toml to version control!
#
# Usage:
#   1. Copy this file: cp secrets.toml.example secrets.toml
#   2. Edit secrets.toml with your actual API keys
#   3. Ensure secrets.toml is in .gitignore (it should be by default)
#
# Alternatively, you can set environment variables:
#   export OPENAI_API_KEY="your-openai-api-key"
#   export ANTHROPIC_API_KEY="your-anthropic-api-key"
#
# Priority order for API keys:
#   1. Streamlit secrets (st.secrets)
#   2. Environment variables
#   3. Manual input in UI
# =============================================================================

# OpenAI API Key
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY = "sk-your-openai-api-key-here"

# Anthropic API Key  
# Get your key at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY = "sk-ant-your-anthropic-api-key-here"
