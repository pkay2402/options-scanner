[Unit]
Description=Newsletter Scanner API Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/options-scanner
Environment="PYTHONPATH=/root/options-scanner"

# Run FastAPI with uvicorn (using system python)
ExecStart=/usr/bin/python3 -m uvicorn backend.api_service:app --host 0.0.0.0 --port 8000

# Restart on failure
Restart=always
RestartSec=10

# Logging
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
